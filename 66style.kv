ScreenManagement:
    MainScreen:
    MapScreen:
    PrayerRequests:



<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<MainScreen>:
    name: "main"

    canvas.before:
        Color:
            rgba: 0.58, 0.84, 0.64, 1
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size


    Image:
        source: "servantlogo.jpeg"
        pos_hint: {"top":1.20, "right":1}

    Button:
        on_release: app.root.current = "map"
        text: "Go To Map"
        size_hint: 0.3,0.1
        font_size: 50
        pos_hint: {"top":0.4, "right":0.65}

    Button:
        on_release: app.root.current = "prayers"
        text: "Make a Prayer Request"
        size_hint: 0.3,0.1
        font_size: 40
        pos_hint: {"x":0.35, "y":0.18}

<PrayerRequests>
    name: "prayers"

    canvas.before:
        Color:
            rgba: 0.58, 0.84, 0.64, 1
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size


<MapScreen>:
    name: "map"
    id: map

    canvas.before:
